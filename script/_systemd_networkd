# This script manages systemd-networkd configuration for the reference device
# on Debian 12. It disables the DHCPv6 client in systemd-networkd to prevent
# conflicts with OpenThread's DHCPv6 PD client.

# The '00-' prefix gives this configuration a high priority. For a given
# interface, systemd-networkd applies the first matching file it finds in
# lexical order.
NETWORK_FILE="/etc/systemd/network/00-${INFRA_IF_NAME}.network"

create_network_file()
{
    sudo tee "${NETWORK_FILE}" >/dev/null <<EOF
[Match]
Name=${INFRA_IF_NAME}

[Network]
DHCP=yes

[IPv6AcceptRA]
# Disable systemd-networkd's client to avoid port conflicts with OpenThread's built-in DHCPv6 PD client
DHCPv6Client=no
EOF
}

systemd_networkd_install()
{
    with SYSTEMD_NETWORKD || return 0

    if ! have systemctl; then
        die "This script requires systemctl!"
    fi

    # Stop NetworkManager service to let systemd-networkd take over
    sudo systemctl stop NetworkManager || true
    sudo systemctl disable NetworkManager || true

    sudo systemctl daemon-reload

    create_network_file

    sudo systemctl enable systemd-networkd || die "Failed to enable systemd-networkd."
    sudo systemctl restart systemd-networkd || die "Failed to restart systemd-networkd."
}

systemd_networkd_uninstall()
{
    with SYSTEMD_NETWORKD || return 0

    if ! have systemctl; then
        die "This script requires systemctl!"
    fi

    # Stop and disable systemd-networkd
    sudo systemctl stop systemd-networkd || true
    sudo systemctl disable systemd-networkd || true

    # Remove the network configuration file
    sudo rm -f "${NETWORK_FILE}"

    sudo systemctl daemon-reload

    # Restore original NetworkManager services
    sudo systemctl enable NetworkManager || true
    sudo systemctl start NetworkManager || true
}
